{
  "manifest_version": 3,
  "name": "SmartAssist.AI",
  "version": "1.0",
  "description": "A proactive AI assistant for any website.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["widget.css"],
      "js": ["widget.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["widget.html"],
      "matches": ["<all_urls>"]
    }
  ]
}